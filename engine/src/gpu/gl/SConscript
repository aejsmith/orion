import os

Import('env')

if env['PLATFORM'] == 'win32':
    env['LIBS'] += ['OpenGL32', 'glew32s']
else:
    env['LIBS'] += ['GL', 'GLEW']

objects = map(env.Object, [
    'buffer.cc',
    'commands.cc',
    'fbo.cc',
    'gl.cc',
    'pipeline.cc',
    'program.cc',
    'resource.cc',
    'state.cc',
    'texture.cc',
    'vertex_data.cc',
])

Return('objects')
